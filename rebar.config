{sub_dirs, ["rel"]}.

{erl_opts, [debug_info,warnings_as_errors, {parse_transform, lager_transform}]}.

{cover_enabled, false}.
{cover_print_enabled, true}.
{eunit_opts, [verbose]}.
{xref_warnings, true}.

{xref_checks, [undefined_function_calls,
               undefined_functions,
               locals_not_used,
               exports_not_used,
               deprecated_function_calls,
               deprecated_functions]}.
{erlydtl_opts, [
     {compiler_options, [report, return, debug_info]}
  ]}.

{deps, [
        {riak_core, ".*",      {git, "git://github.com/zkessin/riak_core", {tag, "2.1.1"}}},
	{riak_sets_api, ".*",	{git, "git://github.com/zkessin/riak_sets_api.git"}},
        {types,      ".*",	{git, "git://github.com/zkessin/types.git"}},
	{proper,     ".*",	{git, "git://github.com/manopapad/proper.git"}}

]}.
